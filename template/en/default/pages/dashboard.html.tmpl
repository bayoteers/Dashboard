[% PROCESS global/header.html.tmpl
    title = "Bugzilla Dashboard" 
    style_urls = ['extensions/Dashboard/web/css/smoothness/jquery-ui-1.8.5.custom.css','extensions/Dashboard/web/css/dashboard.css']
%]

<p id="debug">[% debug_info %]</p>

<hr>

<div id="dashboard">
  <div id="columns">
    <ul id="column1" class="column">
      <li class="widget color-gray" id="main">
        <div class="widget-head">
          <h3>Dashboard</h3>
        </div>
        <div class="widget-content">
          <ul id="widget-buttons">
            <li id="button-new-widget"><a onclick="AddWidget();">Create new Widget</a></li>
            <li id="button-save-widgets"><a onclick="SaveWidgets();">Save widgets</a></li>
          </ul>
          <p>Welcome to Dashboard!</p>
        </div>
      </li>
      [% FOREACH i IN column1.nsort %]
      	[% IF i.widget_id > 0 %]
      	  <li class="widget color-gray" id="widget[% i.widget_id %]">
      	    <div class="widget-head">
      	      <h3>widget [% i.widget_id %]</h3>
      	    </div>
      	    <div class="widget-content">
      	      <p>Restored</p>
      	    </div>
       	  </li>
      	[% END %]
      [% END %]
    </ul>
    <ul id="column2" class="column">
      [% FOREACH i IN column2.nsort %]
      	[% IF i.widget_id > 0 %]
      	  <li class="widget color-gray" id="widget[% i.widget_id %]">
      	    <div class="widget-head">
      	      <h3>widget [% i.widget_id %]</h3>
      	    </div>
      	    <div class="widget-content">
      	      <p>Restored</p>
      	    </div>
       	  </li>
      	[% END %]
      [% END %]
    </ul>
    <ul id="column3" class="column">
      [% FOREACH i IN column3.nsort %]
      	[% IF i.widget_id > 0 %]
      	  <li class="widget color-gray" id="widget[% i.widget_id %]">
      	    <div class="widget-head">
      	      <h3>widget [% i.widget_id %]</h3>
      	    </div>
      	    <div class="widget-content">
      	      <p>Restored</p>
      	    </div>
       	  </li>
      	[% END %]
      [% END %]
    </ul>
  </div>
</div>   

<script type="text/javascript" src="extensions/Dashboard/web/js/jquery-ui-1.8.5.custom.min.js"></script>
<script type="text/javascript" src="extensions/Dashboard/web/js/dashboard.js"></script>

[% PROCESS pages/footer.html.tmpl %]
